---
import Logo from '@assets/logo.svg';
import { Phone } from '@lucide/astro';
import { mainNav } from '@data/navigation';
---

<header class="sticky top-0 z-40 border-b border-neutral-200 bg-white/70 backdrop-blur">
  <div class="mx-auto flex max-w-6xl items-center justify-between gap-3 p-4">
    <div class="flex items-center gap-3 text-base font-semibold text-gray-900">
      <a href="/" aria-label="Logo de Aironmer">
        <img src="/logo.png" alt="" class="h-10 w-10" />
      </a>
      <span class="">Aironmer - Alfombrado, tapiceria y mucho más</span>
    </div>
    <nav aria-label="Menú principal">
      <ul class="flex items-center gap-3">
        {
          mainNav.map((item) => (
            <li>
              <a class="rounded-xl px-3 py-2 hover:bg-neutral-100" href={item.href}>
                {item.title}
              </a>
            </li>
          ))
        }
        <li>
          <a
            class="bg-primary inline-flex items-center gap-2 rounded-2xl px-4 py-2 text-white hover:opacity-90"
            href="/contacto"
          >
            <Phone size={20} />
            Cotiza hoy
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>
